<Window x:Class="ToDoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoApp.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.DataContext>
        <local:LoginPageViewModel/>
    </Window.DataContext>
    <Grid>
        <Label Content="ログイン" HorizontalAlignment="Left" Margin="350,40,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Label Content="ユーザーネーム" HorizontalAlignment="Left" Margin="350,100,0,0" VerticalAlignment="Top" Height="28"/>
        <TextBox x:Name="username"  HorizontalAlignment="Left" Margin="350,120,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"
                 Text="{Binding LoginId}" />
        <Label Content="パスワード" HorizontalAlignment="Left" Margin="350,140,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="password"  HorizontalAlignment="Left" Margin="350,160,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"
                 Text="{Binding Password}" />
        <Button Content="ログイン" HorizontalAlignment="Left" Margin="630,180,0,0" VerticalAlignment="Top"
                Command="{Binding LoginBtnCommand}" />
    </Grid>
</Window>
